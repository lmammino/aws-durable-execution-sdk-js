{
  "name": "@amzn/durable-executions-type-script-testing-library",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "repository": "ssh://git.amazon.com/pkg/DurableExecutionsTypeScriptTestingLibrary",
  "homepage": "https://code.amazon.com/packages/DurableExecutionsTypeScriptTestingLibrary",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "rm -rf dist dist-cjs node_modules",
    "build": "concurrently npm:build:esm npm:build:cjs",
    "build:esm": "rollup --config rollup.config.mjs --environment MODE:esm",
    "build:cjs": "rollup --config rollup.config.mjs --environment MODE:cjs",
    "prepublishOnly": "npm run build && npm run test",
    "lint": "eslint",
    "pretest": "npm run lint",
    "test": "jest --config jest.config.mjs --collectCoverage --collectCoverageFrom=src/**/*.{ts,js}",
    "start-server": "tsx src/checkpoint-server/server.ts",
    "prepare": "husky install"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist-cjs/index.js"
    }
  },
  "files": [
    "dist/",
    "dist-cjs/",
    "!**/__tests__/**"
  ],
  "devDependencies": {
    "@amzn/dex-internal-sdk": "*",
    "@amzn/durable-executions-language-sdk": "*",
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.29.0",
    "@tsconfig/node20": "^20.1.5",
    "@types/aws-lambda": "^8.10.150",
    "@types/express": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "express": "^5.1.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "peerDependencies": {
    "@amzn/dex-internal-sdk": "*",
    "@amzn/durable-executions-language-sdk": "*",
    "express": "^5.1.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "private": true
}
