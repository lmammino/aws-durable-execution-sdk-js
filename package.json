{
  "name": "aws-lambda-durable-functions-js",
  "version": "0.0.q",
  "description": "Lambda Durable Functions SDK, Testing SDK and fully functional examples",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "install-all": "npm install && npm install --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:integration": "act -W .github/workflows/integration-tests.yml --secret-file .secrets --artifact-server-path /tmp/artifacts --container-architecture linux/amd64",
    "build": "npm run build -w packages/lambda-durable-functions-sdk-js -w packages/lambda-durable-functions-testing-sdk-js -w packages/examples",
    "postpublish": "git restore .",
    "clean": "rm -rf node_modules && npm run clean --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:aws/lambda-durable-functions-js.git"
  },
  "keywords": [],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aws/lambda-durable-functions-js/issues"
  },
  "homepage": "https://github.com/aws/lambda-durable-functions-js/blob/test-hsilan/README.md",
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.29.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tsconfig/node20": "^20.1.5",
    "@types/aws-lambda": "^8.10.150",
    "@types/express": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/parser": "^8.44.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "rollup": "^4.50.2",
    "rollup-plugin-node-externals": "^8.1.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "private": true
}
